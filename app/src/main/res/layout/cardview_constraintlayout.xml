<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:id="@+id/cardViewGroup"
                                    app:cardCornerRadius="10dp">
    <!--Cardview-->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearCardView"
            android:background="@color/colorAccent"
            android:orientation="vertical">
        <!--Serviço-->
        <TextView
                android:id="@+id/adapter_cardView_txvServico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:text="Instalação"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorPrimaryDark"
        />
        <!--Cliente-->
        <TextView
                android:id="@+id/adapter_cardView_txvCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp"
                android:textSize="17sp"
                android:text="Cliente "
                android:textColor="@color/grey"
        />


        <!--Os e endereço-->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:orientation="horizontal">
            <!--OS-->
            <TextView
                    android:id="@+id/adapter_cardView_txvOS"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:tint="@color/preto"
                    android:textColor="@color/preto"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="16sp"
                    tools:text=" 1" tools:ignore="RtlHardcoded"/>

            <!--Btn Câmera-->
            <ImageButton
                    android:id="@+id/adapter_cardView_botaoCamera"
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:tint="@color/white"
                    android:backgroundTint="@color/icontint"
                    android:src="@android:drawable/ic_menu_camera"
                    android:layout_marginLeft="200dp"
                    android:layout_gravity="bottom"
                    tools:targetApi="lollipop"
                    android:layout_marginStart="200dp"/>
            <!--Btn mapa-->
            <ImageButton
                    android:id="@+id/adapter_cardView_botaoMapa"
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:tint="@color/white"
                    android:layout_marginRight="0dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="bottom"
                    android:backgroundTint="@color/icontint"
                    android:src="@android:drawable/ic_menu_mapmode"
                    tools:targetApi="lollipop"
                    android:layout_marginEnd="0dp"
                    android:layout_marginStart="15dp"/>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>