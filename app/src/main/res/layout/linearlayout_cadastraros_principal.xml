<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/lnarLayoutCdstrOS_PrincipalLayout"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum= "100">
    <!--iniciando o layout-->
    <!--titulo-->
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/cadastraOs_titulo"
              android:textColor="@color/colorPrimaryDark"
              android:textSize="30dp"
              android:layout_marginTop="25dp"
              android:layout_marginLeft="10dp"
          />
    <!--Lzyout topo-->
    <include layout="@layout/linearlayout_cadastraros_topo"
             android:layout_height="180dp"
             android:layout_width="match_parent"
             android:layout_gravity="top"/>
    <!--Endereço da os-->
    <TextView android:layout_width="match_parent"
              android:layout_height="30dp"
              android:text="Endereço da OS"
              android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="center"/>
    <!--Layout Center-->
    <include layout="@layout/linearlayout_cadastraros_center"
             android:layout_height="100dp"
             android:layout_width="match_parent"
             android:layout_gravity="center"/>
</LinearLayout>